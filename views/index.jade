extends layout

block content

    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'>#{info.name}</span>
                br
                strong Age:
                |  <span id='userInfoAge'>#{info.age}</span>
                br
                strong Gender:
                |  <span id='userInfoGender'>#{info.gender}</span>
                br
                strong Location:
                |  <span id='userInfoLocation'>#{info.location}</span>
        // /USER INFO
        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
                    each u in users
                        tr
                            td
                                a(href="/?name=#{u.fullname}&age=#{u.age}&gender=#{u.gender}&location=#{u.location}") #{u.username}
                            td #{u.email}
                            td
                                form(action="/usersJson/deleteuser/#{u._id}",method="POST")
                                    button(type="submit") delete
        // /USER LIST
        // ADD USER
        h2 Add User
        #addUser
            form(action="/usersJson/adduser", method="POST")
                input#inputUserName(type='text', placeholder='Username',name='usern')
                input#inputUserEmail(type='text', placeholder='Email',name ='mail')
                br
                input#inputUserFullname(type='text', placeholder='Full Name',name='fullname')
                input#inputUserAge(type='text', placeholder='Age',name='age')
                br
                input#inputUserLocation(type='text', placeholder='Location',name='loc')
                input#inputUserGender(type='text', placeholder='gender',name='gender')
                br
                button#btnAddUser(type='submit') Add User
        // /ADD USER
    // /WRAPPER